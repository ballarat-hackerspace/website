<!DOCTYPE html>
<!--[if IE 8]> <html lang="en" class="ie8"> <![endif]-->
<!--[if IE 9]> <html lang="en" class="ie9"> <![endif]-->
<!--[if !IE]><!--> <html lang="en"> <!--<![endif]-->
<head>
  <title>About Us</title>

  %= include 'header.inc'
</head>

<body>
  <!-- header -->
  %= include 'navigation-only.inc', active => 'blog'

  <!-- photos section -->
  <section id="team" class="section">
    <div class="container">
      <h2 class="title text-center">Blog</h2>
      <div class="row">
% for my $b (@{$summary}) {
        <div class="col-sm-4">
          <div class="blog-summary">
            <a href="<%= url_for('blog-page', date => $b->{date}->strftime("%Y%m%d"), slug => $b->{slug}) %>"><h4 class="blog-title"><%= $b->{title} %></h4></a>
            <p class="blog-date"><%= $b->{date}->strftime("%a, %e %b %Y") %></p>
            <%== $b->{excerpt} %>
            <p class="blog-tags"><%= $b->{tags} %></p>
          </div>
        </div>
% }
      </div>
    </div><!-- container -->
  </section><!-- team-section -->

  <!-- footer -->
  %= include 'footer.inc'

  <!-- scripts -->
  %= include 'scripts.inc'
</body>
</html>
