use FindBin;
use lib "$FindBin::Bin/lib";

use Mojolicious::Lite;
use Plugins::Jekyll;

plugin 'JSONConfig'      => {file => '/etc/bhackd.conf'};
plugin 'Plugins::Jekyll' => app->config->{blog};

get '/' => sub {
  shift->render('index');
};

get '/about' => sub {
  shift->render('about');
};

get '/blog' => sub {
  my $c = shift;

  my $tags = $c->param('tags');
  my $summary = $c->blog_summary(tags => $tags);

  $c->stash(summary => $summary, tags => $tags);
  $c->render('blog');
};

get '/blog/:date/:slug' => sub {
  my $c = shift;

  my $entry = $c->blog_parse_entry($c->param('date'), $c->param('slug'));

  if ($entry->{status} == 200) {
    $c->stash($entry);
    return $c->render('blog-entry');
  }

  $c->redirect_to('blog');
} => 'blog-entry';

get '/conduct' => sub {
  shift->render('conduct');
};

get '/contact' => sub {
  shift->render('contact');
};

get '/join' => sub {
  shift->render('join');
};

get '/sponsors' => sub {
  shift->render('sponsors');
};

get '/workshops' => sub {
  shift->render('workshops');
};

any '/*whatever' => {whatever => ''} => sub {
  shift->redirect_to('/');
};

app->config(hypnotoad => {
  listen    => ['http://127.0.0.1:10001'],
  pid_file  => '/var/run/bhackd.pid'
});

app->secrets(app->config->{secrets});
app->start;
